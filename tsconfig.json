{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,

    "jsx": "react-jsx",
    "strict": true,

    // ðŸ”½ dezactivÄƒm tratamentul ca erori pentru variabile/parametri nefolosiÈ›i
    "noUnusedLocals": false,
    "noUnusedParameters": false
  }
}